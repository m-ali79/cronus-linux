{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/renderer/src/**/*.ts",
    "src/preload/*.d.ts",
    "src/native-modules/**/*",
    "src/shared/update.ts"
  ],
  "exclude": [
    "node_modules",
    "src/native-modules/**/macos/**/*",
    "src/native-modules/**/*.h",
    "src/native-modules/**/*.mm",
    "src/native-modules/**/*.cpp",
    "**/*.test.ts",
    "**/*.spec.ts",
    "out/**/*",
    "dist/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "src/*": ["src/renderer/src/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "noEmit": true
  },
  "references": [{ "path": "../shared" }, { "path": "../server" }]
}
