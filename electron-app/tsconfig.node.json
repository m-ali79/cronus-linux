{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/update.ts",
    "src/env.d.ts",
    "src/native-modules/**/*",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/native-modules/**/macos/**/*",
    "src/native-modules/**/*.h",
    "src/native-modules/**/*.mm",
    "src/native-modules/**/*.cpp",
    "**/*.test.ts",
    "**/*.spec.ts",
    "out/**/*",
    "dist/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "references": [{ "path": "../shared" }]
}
